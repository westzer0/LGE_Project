        /**
         * 예약 가능한 시간 슬롯을 동적으로 생성하고 필터링하는 함수
         * @param {Date} selectedDate - 선택된 날짜
         */
        function updateAvailableTimes(selectedDate) {
            const timeSlotButtonsAM = document.getElementById('timeSlotButtonsAM');
            const timeSlotButtonsPM = document.getElementById('timeSlotButtonsPM');
            const timeSlotsContainer = document.getElementById('consultationTimeSlots');

            // 기존 시간 버튼 제거
            timeSlotButtonsAM.innerHTML = '';
            timeSlotButtonsPM.innerHTML = '';

            // 오늘 날짜인지 확인
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const selectedDateOnly = new Date(selectedDate);
            selectedDateOnly.setHours(0, 0, 0, 0);
            const isToday = selectedDateOnly.getTime() === today.getTime();

            // 현재 시간 가져오기 (오늘 날짜 선택 시 필터링에 사용)
            const now = new Date();
            const currentHour = now.getHours();
            const currentMinute = now.getMinutes();
            const currentTimeInMinutes = currentHour * 60 + currentMinute;

            // 시간 슬롯 생성: 10:00부터 16:30까지 30분 간격
            const startHour = 10;
            const startMinute = 0;
            const endHour = 16;
            const endMinute = 30;

            // 시작 시간을 분 단위로 변환
            const startTimeInMinutes = startHour * 60 + startMinute;
            const endTimeInMinutes = endHour * 60 + endMinute;

            // 30분 간격으로 시간 슬롯 생성
            for (let timeInMinutes = startTimeInMinutes; timeInMinutes <= endTimeInMinutes; timeInMinutes += 30) {
                const hour = Math.floor(timeInMinutes / 60);
                const minute = timeInMinutes % 60;
                const timeStr = `${String(hour).padStart(2, '0')}:${String(minute).padStart(2, '0')}`;

                // 시간 버튼 생성
                const timeBtn = document.createElement('button');
                timeBtn.className = 'time-slot-btn';
                timeBtn.setAttribute('data-time', timeStr);
                timeBtn.setAttribute('tabindex', '-1');
                timeBtn.textContent = timeStr;
                timeBtn.onclick = (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    selectTime(timeBtn, timeStr);
                };
                timeBtn.onmousedown = (e) => {
                    e.preventDefault();
                };

                // CASE 1: 오늘 날짜 선택 시 - 지나간 시간은 비활성화 표시
                if (isToday && timeInMinutes <= currentTimeInMinutes) {
                    // 지나간 시간은 연한 회색으로 비활성화 (빗금 없이)
                    timeBtn.disabled = true;
                    timeBtn.style.opacity = '1';
                    timeBtn.style.backgroundColor = '#f5f5f5';
                    timeBtn.style.color = '#999';
                    timeBtn.style.borderColor = '#e5e5e5';
                    timeBtn.style.cursor = 'not-allowed';
                } else {
                    // CASE 2: 내일 이후 날짜 선택 시 또는 오늘 날짜의 남은 시간 - 모든 시간 활성화
                    timeBtn.disabled = false;
                    timeBtn.style.opacity = '';
                    timeBtn.style.backgroundColor = '';
                    timeBtn.style.color = '';
                    timeBtn.style.borderColor = '';
                    timeBtn.style.cursor = 'pointer';
                }

                // 오전(10:00-11:59) 또는 오후(12:00-16:30)로 구분
                if (hour < 12) {
                    timeSlotButtonsAM.appendChild(timeBtn);
                } else {
                    timeSlotButtonsPM.appendChild(timeBtn);
                }
            }

            // 시간 슬롯 컨테이너 표시
            timeSlotsContainer.style.display = 'block';
        }

        // 시간 슬롯 업데이트 (기존 함수 호환성 유지)
        function updateTimeSlots() {
