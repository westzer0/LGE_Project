                            }
                            if (saveData.internal_key) {
                                sessionStorage.setItem('portfolio_internal_key', saveData.internal_key);
                            }
                        } else {
                            throw new Error(saveData.error || '저장 실패');
                        }
                    } catch (error) {
                        console.error('저장 오류:', error);
                        showToast('저장 중 오류가 발생했습니다: ' + error.message);
