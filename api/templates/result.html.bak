    <!-- 다시 추천받기 확인 모달 -->
    <div class="confirm-modal" id="retryOnboardingModal">
        <div class="confirm-modal-content">
            <div class="confirm-modal-message">취향 분석을 다시 진행하고</div>
            <div class="confirm-modal-question">새로운 패키지를 추천 받으시겠어요?</div>
            <div class="confirm-modal-buttons">
                <button class="confirm-modal-btn confirm-modal-btn-cancel"
                    onclick="closeRetryOnboardingModal(false)">취소</button>
                <button class="confirm-modal-btn confirm-modal-btn-confirm"
                    onclick="closeRetryOnboardingModal(true)">확인</button>
            </div>
        </div>
    </div>

    <script>
        // ============================================
        // CSRF 토큰 가져오기
        // ============================================
        // 전역 변수: 추천 제품 정보 저장
        let globalRecommendations = [];

        async function loadProductImages() {
            try {
                // 세션 ID 가져오기
                const sessionId = sessionStorage.getItem('onboarding_session_id');
                if (!sessionId) {
                    console.warn('[세션 로드] 세션 ID가 없습니다.');
                    // 세션 ID가 없어도 기본 UI는 표시되도록 함
                    // showDataNotFoundMessage(); // 주석 처리 - 기본 UI 유지
                    return;
                }

                console.log(`[세션 로드] 세션 ID: ${sessionId}`);
                // 온보딩 세션에서 추천 결과 가져오기
                const response = await fetch(`/api/onboarding/session/${sessionId}/`);

                if (!response.ok) {
                    // 400 오류는 세션이 만료되었거나 존재하지 않는 경우
                    if (response.status === 400 || response.status === 404) {
                        console.warn('세션 조회 실패: 세션이 만료되었거나 존재하지 않습니다.', response.status);
                        // 세션 ID를 제거하여 재시도 방지
                        sessionStorage.removeItem('onboarding_session_id');
                    } else {
                        console.warn('세션 조회 실패:', response.status);
                    }
                    // API 실패해도 페이지는 정상 표시되도록 함
                    return;
                }

                let data;
                try {
                    data = await response.json();
                } catch (error) {
                    console.error('응답 파싱 오류:', error);
                    return;
                }

                if (data.success && data.session && data.session.recommendation_result) {
                    // recommendation_result가 문자열인 경우 파싱
                    let recommendationResult = data.session.recommendation_result;
                    if (typeof recommendationResult === 'string') {
                        try {
                            recommendationResult = JSON.parse(recommendationResult);
                        } catch (e) {
                            console.error('추천 결과 파싱 오류:', e);
                        }
                    }

                    const recommendations = recommendationResult.recommendations || [];

                    // 전역 변수에 저장 (구매상담예약 모달에서 사용)
                    globalRecommendations = recommendations;
                    console.log('전역 추천 제품 정보 저장:', globalRecommendations);

                    console.log(`[세션 로드] 추천 제품: ${recommendations.length}개, 카테고리별: ${Object.keys(recommendationsByCategory).length}개`);

                    // PRD 플로우: Category별로 그룹화된 제품 표시
                    if (Object.keys(recommendationsByCategory).length > 0) {
                        // Category별로 제품 표시 (각 Category당 최대 3개)
                        displayProductsByCategory(recommendationsByCategory, householdSize);

                        // Category별 제품에서 모든 제품 수집하여 가격 계산
                        const allProductsFromCategories = [];
                        Object.values(recommendationsByCategory).forEach(categoryProducts => {
                            if (Array.isArray(categoryProducts)) {
                                allProductsFromCategories.push(...categoryProducts);
                            }
                        });

                        // 가격 합계 업데이트 (Category별 제품들로 계산)
                        if (allProductsFromCategories.length > 0) {
                            updatePortfolioPriceSummary(allProductsFromCategories);
                        } else {
                            console.warn('[가격 계산] Category별 제품이 비어있습니다.');
                        }
                    } else {
                        // 하위 호환성: 기존 방식 (순서대로)
                        const productIds = ['refrigerator', 'microwave', 'dishwasher'];
                        recommendations.forEach((product, index) => {
                            if (index < productIds.length) {
                                const productId = productIds[index];
                                // 이미지 URL 로드 (우선순위: image_url > product_id > product_name)
                                const imgElement = document.getElementById(`product-image-${productId}`);
                                if (imgElement) {
                                    if (product.image_url) {
                                        // image_url이 있으면 직접 사용
                                        imgElement.src = product.image_url;
                                        console.log(`✅ 이미지 URL 직접 사용: ${productId} -> ${product.image_url.substring(0, 100)}...`);
                                    } else {
                                        // image_url이 없으면 product_id 또는 product_name으로 조회
                                        const productDbId = product.product_id || product.id;
                                        if (productDbId) {
                                            loadProductImageByName(productId, product.name, productDbId);
                                        } else if (product.name) {
                                            loadProductImageByName(productId, product.name);
                                        }
                                    }
                                }
                                updateProductInfo(productId, product, householdSize);
                                const productDbId = product.product_id || product.id;
                                if (productDbId) {
                                    loadAIRecommendReason(productId, productDbId);
                                    loadAIReviewSummary(productId, productDbId);
                                }
                            }
                        });

                        // 가격 합계 업데이트
                        updatePortfolioPriceSummary(recommendations);
                    }

                    updateMatchBadgeColors();
                } else {
                    console.warn('[데이터 로드] 추천 결과가 없습니다.');
                    // 데이터가 없어도 기본 UI는 유지 (이미지만 기본값 사용)
                    // showDataNotFoundMessage(); // 주석 처리
                }
            } catch (error) {
                console.error('[데이터 로드] 제품 이미지 로드 오류:', error);
                // 에러가 발생해도 기본 UI는 유지
                // showDataNotFoundMessage(); // 주석 처리
            }
        }

        // ============================================
        // Category별 제품 표시 (PRD 플로우)
        // ============================================
        function displayProductsByCategory(recommendationsByCategory, householdSize) {
            // Category 매핑 (MAIN_CATEGORY → HTML element ID)
            const categoryMapping = {
                '냉장고': 'refrigerator',
                '김치냉장고': 'refrigerator',
                '전자레인지': 'microwave',
                '광파오븐': 'microwave',
                '오븐': 'microwave',
                '식기세척기': 'dishwasher',
                'TV': 'refrigerator',  // fallback
                '에어컨': 'microwave',  // fallback
                '세탁기': 'dishwasher',  // fallback
            };

            let displayedCount = 0;
            const maxDisplay = 3;  // 최대 3개 카테고리만 표시

            // Category별로 순회 (각 Category당 최대 3개 제품)
            for (const [category, products] of Object.entries(recommendationsByCategory)) {
                if (displayedCount >= maxDisplay) break;

                // Category에 해당하는 HTML element ID 찾기
                const productId = categoryMapping[category] ||
                    (displayedCount === 0 ? 'refrigerator' :
                        displayedCount === 1 ? 'microwave' : 'dishwasher');

                // 해당 Category의 첫 번째 제품만 표시 (기존 UI 구조 유지)
                if (products.length > 0) {
                    const product = products[0];

                    // 이미지 URL 로드 (우선순위: image_url > product_id > product_name)
                    const imgElement = document.getElementById(`product-image-${productId}`);
                    if (imgElement) {
                        if (product.image_url) {
                            // image_url이 있으면 직접 사용
                            imgElement.src = product.image_url;
                            console.log(`✅ 이미지 URL 직접 사용: ${productId} -> ${product.image_url.substring(0, 100)}...`);
                        } else {
                            // image_url이 없으면 product_id 또는 product_name으로 조회
                            const productDbId = product.product_id || product.id;
                            if (productDbId) {
                                loadProductImageByName(productId, product.name, productDbId);
                            } else if (product.name) {
                                loadProductImageByName(productId, product.name);
                            }
                        }
                    }

                    // 제품 정보 업데이트
                    updateProductInfo(productId, product, householdSize);

                    // AI 기능 로드
                    const productDbId = product.product_id || product.id;
                    if (productDbId) {
                        loadAIRecommendReason(productId, productDbId);
                        loadAIReviewSummary(productId, productDbId);
                    }

                    displayedCount++;
                }
            }
        }

        // ============================================
        // 포트폴리오 제품 표시 (PRD 기반)
        // ============================================
        function displayPortfolioProducts(products, onboardingData) {
            const householdSize = onboardingData?.household_size || 2;

            // Category별로 그룹화
            const productsByCategory = {};
            products.forEach(product => {
                const category = product.main_category || product.category || '기타';
                if (!productsByCategory[category]) {
                    productsByCategory[category] = [];
                }
                productsByCategory[category].push(product);
            });

            // Category별로 표시
            if (Object.keys(productsByCategory).length > 0) {
                displayProductsByCategory(productsByCategory, householdSize);
            } else {
                // 하위 호환성: 기존 방식
                const productIds = ['refrigerator', 'microwave', 'dishwasher'];
                products.forEach((product, index) => {
                    if (index < productIds.length) {
                        const productId = productIds[index];
                        // 이미지 URL 로드 (우선순위: image_url > product_id > product_name)
                        const imgElement = document.getElementById(`product-image-${productId}`);
                        if (imgElement) {
                            if (product.image_url) {
                                // image_url이 있으면 직접 사용
                                imgElement.src = product.image_url;
                                console.log(`✅ 이미지 URL 직접 사용: ${productId} -> ${product.image_url.substring(0, 100)}...`);
                            } else {
                                // image_url이 없으면 product_id 또는 product_name으로 조회
                                const productDbId = product.product_id || product.id;
                                if (productDbId) {
                                    loadProductImageByName(productId, product.name, productDbId);
                                } else if (product.name) {
                                    loadProductImageByName(productId, product.name);
                                }
                            }
                        }
                        updateProductInfo(productId, product, householdSize);
                        const productDbId = product.product_id || product.id;
                        if (productDbId) {
                            loadAIRecommendReason(productId, productDbId);
                            loadAIReviewSummary(productId, productDbId);
                        }
                    }
                });
            }

            updateMatchBadgeColors();
        }

        // ============================================
        // 포트폴리오 금액 요약 업데이트 (포트폴리오 기반)
        // ============================================
        function updatePortfolioPriceSummaryFromPortfolio(portfolio) {
            console.log('[가격 계산] 포트폴리오 데이터:', portfolio);

            // 포트폴리오에서 가격 정보 가져오기
            let totalOriginal = 0;
            let totalSale = 0;
            let totalFinal = 0;

            // 방법 1: 포트폴리오의 total_original_price, total_discount_price 사용
            if (portfolio.total_original_price !== undefined && portfolio.total_discount_price !== undefined) {
                totalOriginal = Number(portfolio.total_original_price) || 0;
                totalFinal = Number(portfolio.total_discount_price) || 0;
                totalSale = totalFinal; // 판매가는 할인가와 동일
            }
            // 방법 2: 포트폴리오의 products 배열에서 계산
            else if (portfolio.products && Array.isArray(portfolio.products) && portfolio.products.length > 0) {
                portfolio.products.forEach((product, index) => {
                    const original = product.original_price || product.price || 0;
                    const sale = product.sale_price || product.discount_price || product.price || 0;
                    const final = product.discount_price || product.sale_price || product.price || 0;

                    console.log(`[가격 계산] 포트폴리오 제품 ${index + 1}:`, {
                        name: product.name || product.model,
                        original_price: product.original_price,
                        price: product.price,
                        discount_price: product.discount_price,
                        계산된_original: original,
                        계산된_sale: sale,
                        계산된_final: final
                    });

                    totalOriginal += Number(original) || 0;
                    totalSale += Number(sale) || 0;
                    totalFinal += Number(final) || 0;
                });
            }

            console.log('[가격 계산] 포트폴리오 합계:', {
                totalOriginal,
                totalSale,
                totalFinal,
                discountAmount: totalOriginal - totalFinal
            });

            updatePriceElements(totalOriginal, totalSale, totalFinal);
        }

        // 제품명 또는 product_id로 이미지 URL 가져오기
        async function loadProductImageByName(productId, productName, productDbId = null) {
            try {
                const imgElement = document.getElementById(`product-image-${productId}`);
                if (!imgElement) {
                    console.error(`[이미지 로드] 이미지 엘리먼트를 찾을 수 없음: product-image-${productId}`);
                    return;
                }

                // product_id가 있으면 우선 사용
                let apiUrl = '';
                if (productDbId) {
                    apiUrl = `/api/products/image-by-name/?product_id=${productDbId}`;
                    if (productName) {
                        apiUrl += `&name=${encodeURIComponent(productName)}`;
                    }
                    console.log(`[이미지 로드] 시도: ${productId}, product_id: ${productDbId}, 제품명: "${productName}"`);
                } else if (productName) {
                    apiUrl = `/api/products/image-by-name/?name=${encodeURIComponent(productName)}`;
                    console.log(`[이미지 로드] 시도: ${productId}, 제품명: "${productName}"`);
                } else {
                    console.warn(`[이미지 로드] ⚠️ 제품명과 product_id가 모두 없습니다: ${productId}`);
                    // 기본 이미지 유지 (이미 onerror 핸들러가 있음)
                    return;
                }

                const response = await fetch(apiUrl);

                if (!response.ok) {
                    console.warn(`[이미지 로드] API 응답 오류: ${response.status} ${response.statusText} - 기본 이미지 유지`);
                    // 기본 이미지 유지 (이미 onerror 핸들러가 있음)
                    return;
                }

                const data = await response.json();
                console.log(`API 응답:`, data);

                if (data.success && data.image_url) {
                    imgElement.src = data.image_url;
                    console.log(`✅ 제품 이미지 로드 성공: ${productId} -> ${data.image_url.substring(0, 100)}...`);
                } else {
                    console.warn(`⚠️ 이미지 URL을 찾을 수 없습니다: ${productName || productDbId}`, data);
                }
            } catch (error) {
                console.error(`❌ 제품 이미지 로드 오류 (${productName || productDbId}):`, error);
            }
        }

        // 제품명을 70바이트마다 줄바꿈하는 함수
        function insertLineBreaksByByte(text, bytesPerLine = 70) {
            if (!text) return '';

            const encoder = new TextEncoder();
            let result = '';
            let currentByteCount = 0;
            let currentLine = '';

            for (let i = 0; i < text.length; i++) {
                const char = text[i];
                const charBytes = encoder.encode(char).length;

                if (currentByteCount + charBytes > bytesPerLine && currentLine.length > 0) {
                    result += currentLine + '<br>';
                    currentLine = char;
                    currentByteCount = charBytes;
                } else {
                    currentLine += char;
                    currentByteCount += charBytes;
                }
            }

            if (currentLine.length > 0) {
                result += currentLine;
            }

            return result;
        }

        // 제품 정보 업데이트 함수
        function updateProductInfo(productId, product, householdSize = 2) {
            // 제품 카드에 product_id 저장 (편집 기능용)
            const productItem = document.getElementById(`product-${productId}`);
            if (productItem && (product.product_id || product.id)) {
                productItem.dataset.productId = product.product_id || product.id;
            }

            // 제품명 업데이트
            const titleElement = document.querySelector(`#product-${productId} .product-title`);
            if (titleElement && product.name) {
                titleElement.innerHTML = insertLineBreaksByByte(product.name, 70);
            }

            // 취향 일치도 업데이트 및 색상 설정
            const matchBadge = document.querySelector(`#product-${productId} .match-badge`);
            if (matchBadge) {
                // taste_score가 있으면 우선 사용 (백엔드에서 계산한 점수)
                let matchPercent;
                if (product.taste_score !== undefined && product.taste_score !== null) {
                    matchPercent = Math.round(product.taste_score);
                } else if (product.score !== undefined) {
                    matchPercent = Math.round(product.score * 100);
                } else {
                    matchPercent = 0;
                }

                matchBadge.innerHTML = `취향 <span class="match-percent">${matchPercent}%</span> 일치`;

                // 60% 이상이면 빨간색, 미만이면 회색
                if (matchPercent >= 60) {
                    matchBadge.classList.remove('low');
                    matchBadge.classList.add('high');
                } else {
                    matchBadge.classList.remove('high');
                    matchBadge.classList.add('low');
                }
            }

            // 추천 이유 업데이트 (가족 수에 적합한 용량 문구 추가) - LGDX-29
            const reasonText = document.querySelector(`#product-${productId} .recommend-reason-text`);
            if (reasonText) {
                let reasonContent = '';
                if (householdSize) {
                    reasonContent = `가족 수에 적합한 용량 - ${householdSize}인 가구에 최적화된 제품입니다. `;
                }
                if (product.reason) {
                    reasonContent += product.reason;
                } else {
                    reasonContent += '당신의 라이프스타일에 맞춘 추천 제품입니다.';
                }
                reasonText.textContent = reasonContent;
            }

            // 리뷰 업데이트 (최대 3개) - LGDX-40
            if (product.product_id) {
                loadProductReviews(productId, product.product_id);
            }

            // 추천 기준 카드 업데이트 - LGDX-30
            updateRecommendCriteria(productId, product);

            // 가격 업데이트
            if (product.price !== undefined) {
                // 정가 (원래 가격)
                const priceOriginal = document.querySelector(`#product-${productId} .price-original`);
                if (priceOriginal && product.original_price) {
                    priceOriginal.textContent = `${formatPrice(product.original_price)}원`;
                } else if (priceOriginal && product.price) {
                    priceOriginal.textContent = `${formatPrice(product.price)}원`;
                }

                // 판매가
                const priceSale = document.querySelector(`#product-${productId} .price-sale`);
                if (priceSale && product.sale_price) {
                    priceSale.textContent = `${formatPrice(product.sale_price)}원`;
                } else if (priceSale && product.price) {
                    priceSale.textContent = `${formatPrice(product.price)}원`;
                }

                // 최대 혜택가
                const priceFinal = document.querySelector(`#product-${productId} .price-final`);
                if (priceFinal && product.discount_price) {
                    priceFinal.textContent = `${formatPrice(product.discount_price)}원`;
                } else if (priceFinal && product.sale_price) {
                    priceFinal.textContent = `${formatPrice(product.sale_price)}원`;
                } else if (priceFinal && product.price) {
                    priceFinal.textContent = `${formatPrice(product.price)}원`;
                }
            }
        }

        // 가격 포맷팅 함수
        function formatPrice(price) {
            if (!price) return '0';
            return Math.round(price).toLocaleString('ko-KR');
        }

        // 추천 기준 카드 업데이트 함수 - LGDX-30
        function updateRecommendCriteria(productId, product) {
            // 스펙 점수
            const specScore = product.score_breakdown?.SpecScore || product.spec_score || 0;
            const specElement = document.getElementById(`criteria-spec-${productId}`);
            if (specElement) {
                specElement.textContent = specScore > 0 ? `${Math.round(specScore)}점` : '-';
            }

            // 가격 점수
            const priceScore = product.score_breakdown?.PriceScore || product.price_score || 0;
            const priceElement = document.getElementById(`criteria-price-${productId}`);
            if (priceElement) {
                priceElement.textContent = priceScore > 0 ? `${Math.round(priceScore)}점` : '-';
            }

            // 기능 점수 (LifestyleScore + PreferenceScore)
            const lifestyleScore = product.score_breakdown?.LifestyleScore || 0;
            const preferenceScore = product.score_breakdown?.PreferenceScore || 0;
            const featureScore = lifestyleScore + preferenceScore;
            const featureElement = document.getElementById(`criteria-feature-${productId}`);
            if (featureElement) {
                featureElement.textContent = featureScore > 0 ? `${Math.round(featureScore)}점` : '-';
            }
        }

        // 포트폴리오 금액 요약 업데이트 함수 - LGDX-26
        function updatePortfolioPriceSummary(recommendations) {
            console.log('[가격 계산] recommendations:', recommendations);

            let totalOriginal = 0;
            let totalSale = 0;
            let totalFinal = 0;

            if (!recommendations || recommendations.length === 0) {
                console.warn('[가격 계산] recommendations가 비어있습니다.');
                // 모든 가격을 0으로 설정
                updatePriceElements(0, 0, 0);
                return;
            }

            recommendations.forEach((product, index) => {
                // 백엔드에서 반환하는 필드명: price, discount_price
                // 호환성을 위해 여러 필드명 확인
                const original = product.original_price || product.price || 0;
                const sale = product.sale_price || product.discount_price || product.price || 0;
                const final = product.discount_price || product.sale_price || product.price || 0;

                console.log(`[가격 계산] 제품 ${index + 1}:`, {
                    name: product.name || product.model,
                    original_price: product.original_price,
                    price: product.price,
                    discount_price: product.discount_price,
                    sale_price: product.sale_price,
                    계산된_original: original,
                    계산된_sale: sale,
                    계산된_final: final
                });

                totalOriginal += Number(original) || 0;
                totalSale += Number(sale) || 0;
                totalFinal += Number(final) || 0;
            });

            console.log('[가격 계산] 합계:', {
                totalOriginal,
                totalSale,
                totalFinal,
                discountAmount: totalOriginal - totalFinal
            });

            updatePriceElements(totalOriginal, totalSale, totalFinal);
        }

        // 가격 요소 업데이트 헬퍼 함수
        function updatePriceElements(totalOriginal, totalSale, totalFinal) {
            // 정가 합계
            const originalElement = document.getElementById('total-original-price');
            if (originalElement) {
                originalElement.textContent = `${formatPrice(totalOriginal)}원`;
            } else {
                console.error('[가격 계산] total-original-price 요소를 찾을 수 없습니다.');
            }

            // 판매가 합계
            const saleElement = document.getElementById('total-sale-price');
            if (saleElement) {
                saleElement.textContent = `${formatPrice(totalSale)}원`;
            } else {
                console.error('[가격 계산] total-sale-price 요소를 찾을 수 없습니다.');
            }

            // 최대 혜택가 합계
            const finalElement = document.getElementById('total-final-price');
            if (finalElement) {
                finalElement.textContent = `${formatPrice(totalFinal)}원`;
            } else {
                console.error('[가격 계산] total-final-price 요소를 찾을 수 없습니다.');
            }

            // 총 할인 금액
            const discountAmount = totalOriginal - totalFinal;
            const discountElement = document.getElementById('total-discount-amount');
            if (discountElement) {
                discountElement.textContent = `-${formatPrice(discountAmount)}원`;
            } else {
                console.error('[가격 계산] total-discount-amount 요소를 찾을 수 없습니다.');
            }
        }

        // 구매하러가기 함수 - LGDX-10
        function goToPurchase(productId) {
            const sessionId = sessionStorage.getItem('onboarding_session_id');
            if (!sessionId) {
                alert('세션 정보를 찾을 수 없습니다.');
                return;
            }

            // 세션에서 제품 정보 가져오기
            fetch(`/api/onboarding/session/${sessionId}/`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.session && data.session.recommendation_result) {
                        const recommendations = data.session.recommendation_result.recommendations || [];
                        const productIds = ['refrigerator', 'microwave', 'dishwasher'];
                        const index = productIds.indexOf(productId);

                        if (index >= 0 && index < recommendations.length) {
                            const product = recommendations[index];
                            const productDbId = product.product_id || product.id;

                            if (productDbId) {
                                // LG 결제 페이지로 이동 (제품 ID 포함)
                                // 실제 LG 결제 페이지 URL로 변경 필요
                                const purchaseUrl = `https://www.lge.co.kr/kr/products/${productDbId}`;
                                window.open(purchaseUrl, '_blank');
                            } else {
                                alert('제품 정보를 찾을 수 없습니다.');
                            }
                        }
                    } else {
                        alert('제품 정보를 불러올 수 없습니다.');
                    }
                })
                .catch(error => {
                    console.error('구매 페이지 이동 오류:', error);
                    alert('구매 페이지로 이동하는 중 오류가 발생했습니다.');
                });
        }

        // 제품 리뷰 로드 함수 (최대 3개) - LGDX-40
        async function loadProductReviews(productId, productDbId) {
            try {
                const response = await fetch(`/api/products/${productDbId}/reviews/`);
                if (!response.ok) {
                    console.warn(`리뷰 로드 실패: ${response.status}`);
                    return;
                }

                const data = await response.json();
                if (data.success && data.reviews && data.reviews.length > 0) {
                    const reviewBox = document.querySelector(`#product-${productId} .review-analysis-box`);
                    if (reviewBox) {
                        const reviewTexts = reviewBox.querySelectorAll('.review-analysis-text');
                        // 기존 리뷰 텍스트 제거 (제목 제외)
                        reviewTexts.forEach((el, index) => {
                            if (index > 0) {  // 첫 번째는 제목이므로 제외
                                el.remove();
                            }
                        });

                        // 최대 3개의 리뷰 추가
                        const reviewsToShow = data.reviews.slice(0, 3);
                        reviewsToShow.forEach(review => {
                            if (review.review_text) {
                                const reviewElement = document.createElement('div');
                                reviewElement.className = 'review-analysis-text';
                                reviewElement.textContent = review.review_text;
                                reviewBox.appendChild(reviewElement);
                            }
                        });
                    }
                }
            } catch (error) {
                console.error(`리뷰 로드 오류 (제품 ID: ${productDbId}):`, error);
            }
        }

        // 스펙 모달 열기
        function openSpecModal(productId) {
            const modal = document.getElementById('specModal');
            const specList = document.getElementById('specList');

            // 모달 먼저 열기
            modal.classList.add('active');

            // 로딩 메시지 표시
            specList.innerHTML = '<li class="spec-item">스펙 정보를 불러오는 중...</li>';

            // 1. 전역 변수에서 제품 정보 확인
            if (globalRecommendations && globalRecommendations.length > 0) {
                const productIds = ['refrigerator', 'microwave', 'dishwasher'];
                const index = productIds.indexOf(productId);

                if (index >= 0 && index < globalRecommendations.length) {
                    const product = globalRecommendations[index];
                    displaySpecModal(product);
                    return;
                }
            }

            // 2. 세션에서 제품 정보 가져오기 시도
            const sessionId = sessionStorage.getItem('onboarding_session_id');
            if (sessionId) {
                fetch(`/api/onboarding/session/${sessionId}/`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('세션 조회 실패');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success && data.session && data.session.recommendation_result) {
                            let recommendationResult = data.session.recommendation_result;
                            if (typeof recommendationResult === 'string') {
                                try {
                                    recommendationResult = JSON.parse(recommendationResult);
                                } catch (e) {
                                    console.error('추천 결과 파싱 오류:', e);
                                }
                            }

                            const recommendations = recommendationResult.recommendations || [];
                            const productIds = ['refrigerator', 'microwave', 'dishwasher'];
                            const index = productIds.indexOf(productId);

                            if (index >= 0 && index < recommendations.length) {
                                const product = recommendations[index];
                                // 전역 변수에 저장
                                globalRecommendations = recommendations;
                                displaySpecModal(product);
                            } else {
                                // 기본 제품 ID로 시도
                                useDefaultProductId(productId);
                            }
                        } else {
                            // 기본 제품 ID로 시도
                            useDefaultProductId(productId);
                        }
                    })
                    .catch(error => {
                        console.error('스펙 정보 로드 오류:', error);
                        // 기본 제품 ID로 시도
                        useDefaultProductId(productId);
                    });
            } else {
                // 세션이 없으면 기본 제품 ID로 시도
                useDefaultProductId(productId);
            }
        }

        // 기본 제품 ID를 사용하여 스펙 정보 가져오기
        function useDefaultProductId(productId) {
            // 제품 ID 매핑 (기본 제품 ID)
            const defaultProductIds = {
                'refrigerator': 'md10625884',
                'microwave': 'md10200826',
                'dishwasher': 'md10539834'
            };

            const defaultProductId = defaultProductIds[productId];
            if (defaultProductId) {
                // 기본 제품 정보 객체 생성
                const product = {
                    product_id: defaultProductId
                };
                displaySpecModal(product);
            } else {
                const specList = document.getElementById('specList');
                specList.innerHTML = '<li class="spec-item">스펙 정보를 불러올 수 없습니다.</li>';
            }
        }

        // 스펙 모달 닫기
        function closeSpecModal() {
            const modal = document.getElementById('specModal');
            modal.classList.remove('active');
        }

        // 스펙 정보 표시
        function displaySpecModal(product, productId = null) {
            const specList = document.getElementById('specList');
            specList.innerHTML = '';

            if (product && product.product_id) {
                // API에서 제품 스펙 가져오기
                fetch(`/api/products/${product.product_id}/spec/`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.specs) {
                            const specs = data.specs;

                            // 스펙 키 매핑 (다양한 키 이름 지원)
                            const specMappings = {
                                '전체 용량 (L)': [
                                    specs['전체 용량 (L)'], specs['전체 용량'], specs['용량'], specs['총 용량'],
                                    specs['냉장실 용량'], specs['냉동실 용량'], specs['총용량']
                                ],
                                '색상': [
                                    specs['색상'], specs['컬러'], specs['색상명'], specs['제품 색상']
                                ],
                                '도어스타일/재질': [
                                    specs['도어스타일/재질'], specs['도어스타일'], specs['재질'], specs['도어 재질'],
                                    specs['도어 스타일'], specs['도어 재료']
                                ],
                                '냉각방식': [
                                    specs['냉각방식'], specs['냉각 방식'], specs['냉각 시스템'], specs['냉각기술']
                                ],
                                '에너지 소비효율등급': [
                                    specs['에너지 소비효율등급'], specs['에너지 효율등급'], specs['에너지 효율'],
                                    specs['효율등급'], specs['에너지등급'], specs['소비효율등급']
                                ]
                            };

                            // 각 스펙 항목 생성
                            Object.keys(specMappings).forEach(key => {
                                const values = specMappings[key];
                                const value = values.find(v => v !== undefined && v !== null && v !== '');

                                if (value) {
                                    const li = document.createElement('li');
                                    li.className = 'spec-item';
                                    li.textContent = `${key}: ${value}`;
                                    specList.appendChild(li);
                                }
                            });

                            // 스펙이 하나도 없으면 메시지 표시
                            if (specList.children.length === 0) {
                                specList.innerHTML = '<li class="spec-item">스펙 정보를 불러올 수 없습니다.</li>';
                            }
                        } else {
                            // 기본 스펙 정보
                            specList.innerHTML = '<li class="spec-item">스펙 정보를 불러올 수 없습니다.</li>';
                        }
                    })
                    .catch(error => {
                        console.error('스펙 정보 로드 오류:', error);
                        specList.innerHTML = '<li class="spec-item">스펙 정보를 불러올 수 없습니다.</li>';
                    });
            } else {
                // 기본 스펙 정보
                specList.innerHTML = '<li class="spec-item">스펙 정보를 불러올 수 없습니다.</li>';
            }
        }

        // 취향 일치도 배지 색상 업데이트
        function updateMatchBadgeColors() {
            document.querySelectorAll('.match-badge').forEach(badge => {
                const text = badge.textContent || badge.innerText;
                const match = text.match(/(\d+)%/);
                if (match) {
                    const percent = parseInt(match[1]);
                    // 숫자를 bold 처리
                    if (!badge.querySelector('.match-percent')) {
                        badge.innerHTML = text.replace(/(\d+%)/, '<span class="match-percent">$1</span>');
                    }
                    // 60% 이상이면 빨간색, 미만이면 회색
                    if (percent >= 60) {
                        badge.classList.remove('low');
                        badge.classList.add('high');
                    } else {
                        badge.classList.remove('high');
                        badge.classList.add('low');
                    }
                }
            });
        }

