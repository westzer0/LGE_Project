                        if (data.success) {
                            showToast('제품이 업데이트되었습니다.');
                            // 페이지 새로고침하여 업데이트된 제품 표시
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            throw new Error(data.error || '제품 업데이트 실패');
                        }
                    } catch (error) {
                        console.error('제품 선택 오류:', error);
                        showToast('제품 업데이트 중 오류가 발생했습니다: ' + error.message);
                    }
                }

                async function removeProduct() {
                    if (!confirm('정말 이 제품을 포트폴리오에서 삭제하시겠습니까?')) {
                        return;
                    }

                    try {
                        const portfolioId = sessionStorage.getItem('portfolio_id') || sessionStorage.getItem('portfolio_internal_key');
                        if (!portfolioId) {
                            showToast('포트폴리오 정보를 찾을 수 없습니다.');
                            return;
                        }

                        // 현재 제품 ID 가져오기
                        const productItem = document.getElementById(`product-${currentEditProductId}`);
                        const currentProductId = productItem?.dataset?.productId;

                        if (!currentProductId) {
                            showToast('현재 제품 ID를 찾을 수 없습니다.');
                            return;
                        }

                        showToast('제품을 삭제하는 중...');
                        closeEditProductModal();

                        const response = await fetch(`/api/portfolio/${portfolioId}/edit/`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-CSRFToken': getCookie('csrftoken') || ''
                            },
                            body: JSON.stringify({
                                action: 'remove',
                                product_id: parseInt(currentProductId),
                            }),
                        });

                        const data = await response.json();
                        if (data.success) {
                            showToast('제품이 삭제되었습니다.');
                            // 페이지 새로고침
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            throw new Error(data.error || '제품 삭제 실패');
                        }
                    } catch (error) {
                        console.error('제품 삭제 오류:', error);
                        showToast('제품 삭제 중 오류가 발생했습니다: ' + error.message);
                    }
                }

                // ============================================
                // Toast 알림 표시
                // ============================================
                function showToast(message) {
                    const toast = document.getElementById('toast');
                    const toastMessage = document.getElementById('toastMessage');
                    toastMessage.textContent = message;
                    toast.classList.add('show');

                    setTimeout(() => {
                        closeToast();
                    }, 3000);
                }

                // Toast 알림 닫기
                function closeToast() {
                    const toast = document.getElementById('toast');
                    toast.classList.remove('show');
                }
    </script>
</body>

</html>
{% endif %}
