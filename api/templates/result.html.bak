        // 캘린더 초기화
        function initCalendar() {
            currentCalendarDate = new Date();
            renderCalendar();
        }

        // 캘린더 렌더링
        function renderCalendar() {
            const year = currentCalendarDate.getFullYear();
            const month = currentCalendarDate.getMonth();

            // 월/년 표시
            document.getElementById('calendarMonthYear').textContent = `${year}.${String(month + 1).padStart(2, '0')}`;

            // 첫 날과 마지막 날
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const firstDayOfWeek = firstDay.getDay();
            const daysInMonth = lastDay.getDate();

            // 오늘 날짜 (시간 제거)
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const isCurrentMonth = today.getFullYear() === year && today.getMonth() === month;
            const todayDate = today.getDate();

            // 활성화 가능한 날짜 범위 (오늘 이후 10일, 오늘 날짜 미포함)
            const maxAvailableDate = new Date(today);
            maxAvailableDate.setDate(today.getDate() + 10);
            maxAvailableDate.setHours(23, 59, 59, 999);

            const calendarDays = document.getElementById('calendarDays');
            calendarDays.innerHTML = '';

            // 빈 칸 추가 (첫 날 전)
            for (let i = 0; i < firstDayOfWeek; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day';
                calendarDays.appendChild(emptyDay);
            }

            // 날짜 추가
            for (let date = 1; date <= daysInMonth; date++) {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day';
                const dateSpan = document.createElement('span');
                dateSpan.textContent = date;
                dayElement.appendChild(dateSpan);

                const currentDate = new Date(year, month, date);
                currentDate.setHours(0, 0, 0, 0);
                const isToday = isCurrentMonth && date === todayDate;
                const isAvailable = currentDate > today && currentDate <= maxAvailableDate;

                if (isToday) {
                    dayElement.classList.add('today');
                }

                if (!isAvailable && !isToday) {
                    dayElement.classList.add('disabled');
                } else {
                    // 오늘 날짜와 활성화 가능한 날짜 모두 클릭 가능
                    dayElement.classList.add('available');
                    // mousedown 이벤트로 즉시 선택 표시
                    dayElement.onmousedown = (e) => {
                        e.preventDefault();
                        selectDate(dayElement, date);
                    };
                    dayElement.onclick = () => selectDate(dayElement, date);
                }

                // 선택된 날짜 표시
                if (selectedDate && selectedDate.getDate() === date &&
                    selectedDate.getMonth() === month &&
                    selectedDate.getFullYear() === year) {
                    dayElement.classList.add('selected');
                } else if (isToday && !selectedDate) {
                    // 기본적으로 오늘 날짜 선택 (selectedDate가 없을 때만)
                    dayElement.classList.add('selected');
                    selectedDate = new Date(year, month, date);
                    selectedDate.setHours(0, 0, 0, 0);
                }

                calendarDays.appendChild(dayElement);
            }
        }

        // 날짜 선택
        function selectDate(dayElement, date) {
            // 이전 선택 해제 (오늘 날짜 포함)
            document.querySelectorAll('.calendar-day').forEach(day => {
                day.classList.remove('selected');
            });

            // 새 선택 - 즉시 활성화 표시
            dayElement.classList.add('selected');

            const year = currentCalendarDate.getFullYear();
            const month = currentCalendarDate.getMonth();
            selectedDate = new Date(year, month, date);
            selectedDate.setHours(0, 0, 0, 0);

            // 선택된 시간 초기화
            selectedTime = null;
            document.querySelectorAll('.time-slot-btn').forEach(btn => btn.classList.remove('selected'));

            // 오늘 날짜면 시간 슬롯 표시
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            const daysDiff = Math.ceil((selectedDate - today) / (1000 * 60 * 60 * 24));

            // 날짜 선택 시마다 시간 슬롯 업데이트
            if (daysDiff === 0) {
                // CASE 1: 오늘 날짜 선택 시 - 지나간 시간 필터링
                updateAvailableTimes(selectedDate);
            } else if (daysDiff >= 1) {
                // CASE 2: 내일 이후 날짜 선택 시 (1일 이상) - 모든 시간 표시
                updateAvailableTimes(selectedDate);
            }

            updateSubmitButton();
        }

        // 월 변경
        function changeMonth(direction) {
            currentCalendarDate.setMonth(currentCalendarDate.getMonth() + direction);
